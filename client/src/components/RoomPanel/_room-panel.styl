@import '../../styles/global.styl'

.panel--room
  position absolute
  top 0
  bottom 0
  right 0
  width 30rem
  border-radius .5rem 0 0 2rem
  box-shadow 2px 2px 6px 2px rgba($c-black, 0.1)

  .panel
    &__inner
      padding spacer(5) spacer(4)
      height 100%

    &__top
      display flex
      justify-content space-between
      align-items center

    &__body
      margin-top spacer(4)
