@import '../../../styles/global.styl'

.message
  max-width 22rem
  display flex
  flex-direction column
  align-items flex-start

  &__body
    background $c-grey-medium
    border-radius 2rem 2rem 2rem 0.5rem
    padding 1rem 2rem
    font-size 1.2rem

  &__bottom
    padding .4rem 1rem .8rem
    font-size 1rem
    color $c-grey

  &.is-mine
    align-items flex-end
    .message
      &__body
        background $c-blue-medium
        color $c-white
        border-radius 2rem 2rem 0.5rem 2rem
