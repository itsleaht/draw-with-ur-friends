@import '../../../styles/global.styl'

.form--message
  position relative
  height 10rem
  background $c-grey-light

  .form__wrapper
    height 100%
    padding .6rem 10rem .6rem .6rem
    border-top .1rem solid $c-grey


  .form__textarea
    width 100%
    height 100%
    padding 1rem 1rem 1rem 1rem
    border none
    background $c-grey-light
    resize none

    outline none
    font-size 1.4rem

  .form__submit
    position absolute
    top 50%
    right 2rem
    transform translateY(-50%)
    padding 1.5rem 1.2rem

    border none
    border-radius 1.5rem
    box-shadow 0 .4rem .6rem rgba(145, 145, 145, 0.25)
    background $c-blue
    color $c-white

    font-weight bold
    font-size 1.4rem
    letter-spacing 0.05rem
    text-transform uppercase

    cursor pointer

    &:hover
      background $c-blue-dark
