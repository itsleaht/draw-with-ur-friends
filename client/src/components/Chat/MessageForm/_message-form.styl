@import '../../../styles/global.styl'

.form--message
  position relative
  height 8rem
  margin 2rem
  border-radius 2rem
  background $c-grey-light

  .form__wrapper
    height 100%
    padding 1rem 8.5rem 1rem 2rem

  .form__textarea
    width 100%
    height 100%
    padding-right 1rem
    border none
    background $c-grey-light
    resize none
    outline none
    font-size 1.2rem

  .form__submit
    position absolute
    top 50%
    right 2rem
    transform translateY(-50%)
    padding 1rem 1.2rem

    border none
    border-radius 1.5rem
    box-shadow 0 .4rem .6rem rgba(145, 145, 145, 0.25)
    background $c-blue
    transition background .3s
    color $c-white

    font-weight bold
    font-size 1.4rem
    letter-spacing 0.05rem
    text-transform uppercase

    cursor pointer

    &:hover
      background $c-blue-dark
