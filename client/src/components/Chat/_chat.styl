@import '../../styles/global.styl'

.chat
  position absolute
  bottom 4rem
  right 4rem
  height 54rem
  width 37rem

  &__inner
    height 100%
    border-radius 2rem
    overflow hidden
    box-shadow 0px 4px 8px rgba(45, 45, 45, 0.12)

  &__header
    display flex
    justify-content space-between
    background $c-purple-pale-2
    padding 1.3rem 2rem

    &__left
      position relative

      .icon
        position relative
        top .4rem
        margin-right 1.6rem

    &__left,
    &__right
      display flex
      align-items center


  &__body
    display flex
    flex-direction column
    justify-content space-between
    height 47.7rem
    border 1px solid $c-grey
    border-radius 0 0 2rem 2rem

    &__top
      padding 1rem 0 1rem 1rem
      max-height 37.6rem

  .heading-3
    font-weight bold
    font-size 1.8rem


