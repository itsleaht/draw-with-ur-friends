@import '../../../styles/global.styl'

.toolbox--save
  width 4rem
  height 4rem
  padding 0
  align-items center
  background $c-blue-medium
  overflow hidden
  transition background $t-duration

  &:hover
    background $c-blue-brand

  &:before
    content ''
    position absolute
    background $c-green
    top 0
    left 0
    right 0
    bottom 0
    transform scaleY(0)
    transition transform $t-duration
    transform-origin top

  .toolbox__inner,
  .toolbox__body,
  .toolbox__icon
    position relative
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
