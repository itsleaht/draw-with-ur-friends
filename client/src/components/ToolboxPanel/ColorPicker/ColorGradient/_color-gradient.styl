@import '../../../../styles/global.styl'

.color__wrapper--gradient
  position relative
  cursor pointer
  margin-bottom 2rem

  .color__gradient
    width 100%
    height 21rem
    border-radius .3rem


  .color__cursor
    position absolute
    top 0
    left 0
    width 1.8rem
    height 1.8rem
    border .2rem solid $c-white
    border-radius 3rem
    background none
    transform translate(-50%, -50%)
    pointer-events none

    &:after,
    &:before
      content ''
      position absolute
      border .1rem solid $c-grey
      border-radius 3rem

    &:after
      top -.2rem
      left -.2rem
      bottom -.2rem
      right -.2rem
