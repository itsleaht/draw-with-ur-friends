@import '../../../../styles/global.styl'

.color__spectrum--gradient
  position relative
  height 2rem

  &.is-open
    .color__spectrum
      transition transform $t-duration
      transform translateY(0)

  .color__cursor
    background yellow
    top 50%
    left 0
    transform translate(-50%, -50%)

  .color__spectrum
    width 100%
    height 2rem
    border-radius 1rem
    transform translateY(.1rem)
    pointer-events all
    cursor crosshair


