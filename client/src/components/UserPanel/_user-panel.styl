@import '../../styles/global.styl'

.panel--user
  position absolute
  top 2rem
  bottom 2rem
  right 0
  width 30rem
  border-radius 2rem 0 0 2rem
  box-shadow 2px 2px 6px 2px rgba($c-black, 0.1)

  .panel__inner
    padding 2rem
    height 100%

  .panel__box
    height 50%
    overflow hidden

    .panel__title
        margin-bottom 1rem

    &__top
      display flex
      justify-content space-between
      align-items center
