@import './global.styl'
@import './core/_typography.styl'
@import './core/_colors.styl'

html
  margin 0
  padding 0
  font-size 62.5%
  box-sizing border-box

*
  box-sizing border-box

body
  margin 0
  padding 0
  font-family $f-nunito
  font-size 1.4rem
  line-height 1.8rem

input
  font-family $f-nunito

p
  margin 0
  padding 0

ul, li
  list-style none
  padding 0
  margin 0

h1, h2, p
  margin 0
  padding 0

button
  background none
  border 0
  cursor pointer
  outline none

.aside
  position absolute
  right 0
  top 0
  height 100vh
